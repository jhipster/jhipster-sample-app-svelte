{
	"printWidth": 80,
	"tabWidth": 4,
	"useTabs": true,
	"semi": false,
	"singleQuote": true,
	"arrowParens": "avoid",
	"svelteSortOrder": "options-scripts-styles-markup",
	"svelteStrictMode": true,
	"svelteBracketNewLine": true,
	"svelteAllowShorthand": true,
	"overrides": [
		{
			"files": "src/test/resources/**/*.html",
			"options": {
				"printWidth": 140
			}
		},
		{
			"files": "*.java",
			"options": {
				"useTabs": false,
				"printWidth": 140
			}
		}
	]
}
