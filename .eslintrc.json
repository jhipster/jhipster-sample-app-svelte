{
	"extends": [
		"eslint:recommended",
		"plugin:cypress/recommended",
		"plugin:jest-dom/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 2019,
		"sourceType": "module"
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"cypress/globals": true,
		"jest": true
	},
	"plugins": ["svelte3", "cypress", "jest-dom", "testing-library"],
	"overrides": [
		{
			"files": ["**/*.svelte"],
			"processor": "svelte3/svelte3"
		},
		{
			"files": ["src/**/*.spec.js"],
			"extends": ["plugin:testing-library/dom"]
		}
	],
	"rules": {
		"no-unused-vars": "off"
	}
}
