{
	"extends": ["eslint:recommended", "plugin:cypress/recommended"],
	"parserOptions": {
		"ecmaVersion": 2019,
		"sourceType": "module"
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"cypress/globals": true
	},
	"plugins": ["svelte3", "cypress"],
	"overrides": [
		{
			"files": ["**/*.svelte"],
			"processor": "svelte3/svelte3"
		}
	],
	"rules": {
		"no-unused-vars": "off"
	}
}
