{
	"name": "svelte-sample-application",
	"description": "Description for svelteSampleApplication",
	"version": "0.1.0",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"prettier:format": "prettier --write \"{,src/**/}*.{md,json,js,svelte,css}\"",
		"lint": "eslint src/main/webapp/",
		"lint:fix": "npm run lint --fix",
		"cleanup": "rimraf target/classes/static/",
		"start": "run-s \"tailwind:build\" \"sapper:watch\"",
		"sapper:watch": "sapper dev --src src/main/webapp/app --routes src/main/webapp/app/routes --static src/main/webapp/static --output src/main/webapp/app/node_modules/@sapper --build-dir target/webapp/output --port 9000 --open true",
		"build": "sapper export target/classes/static/ --entry '/ /404' --basepath / --src src/main/webapp/app --routes src/main/webapp/app/routes --static src/main/webapp/static --output src/main/webapp/app/node_modules/@sapper --build-dir target/webapp/output",
		"tailwind:build": "postcss src/main/webapp/app/tailwind.css -o src/main/webapp/static/vendor.css",
		"tailwind:watch": "npm run tailwind:build -- --w",
		"cy:open": "cypress open",
		"test": "npm run lint",
		"e2e": "cypress run",
		"postbuild": "mv target/classes/static/404/index.html target/classes/static/404.html",
		"webpack:build": "NODE_ENV=development run-s \"tailwind:build\" \"build\"",
		"webpack:prod": "NODE_ENV=production run-s \"tailwind:build\" \"build\"",
		"webpack:test": "npm run test"
	},
	"dependencies": {
		"compression": "1.7.4",
		"polka": "0.5.2",
		"sirv": "1.0.6"
	},
	"devDependencies": {
		"@babel/core": "7.11.6",
		"@babel/plugin-syntax-dynamic-import": "7.8.3",
		"@babel/plugin-transform-runtime": "7.11.5",
		"@babel/preset-env": "7.11.5",
		"@babel/runtime": "7.11.2",
		"@fortawesome/free-solid-svg-icons": "5.15.0",
		"@fullhuman/postcss-purgecss": "3.0.0",
		"@rollup/plugin-babel": "5.2.1",
		"@rollup/plugin-commonjs": "15.1.0",
		"@rollup/plugin-node-resolve": "9.0.0",
		"@rollup/plugin-replace": "2.3.3",
		"autoprefixer": "10.0.1",
		"cssnano": "4.1.10",
		"cypress": "5.3.0",
		"eslint": "7.10.0",
		"eslint-plugin-cypress": "2.11.2",
		"eslint-plugin-svelte3": "2.7.3",
		"fa-svelte": "3.1.0",
		"generator-jhipster-svelte": "0.1.0-beta.1",
		"http-proxy-middleware": "1.0.5",
		"husky": "4.3.0",
		"npm-run-all": "4.1.5",
		"postcss": "8.1.1",
		"postcss-cli": "8.0.0",
		"prettier": "2.1.2",
		"prettier-plugin-svelte": "1.4.0",
		"pretty-quick": "3.0.2",
		"rimraf": "3.0.2",
		"rollup": "2.28.2",
		"rollup-plugin-svelte": "6.0.1",
		"rollup-plugin-terser": "7.0.2",
		"sapper": "0.28.9",
		"svelte": "3.29.0",
		"tailwindcss": "1.8.10"
	}
}
