{
	"name": "svelte-demo-application",
	"version": "0.1.0",
	"private": true,
	"description": "Description for SvelteDemoApplication",
	"license": "UNLICENSED",
	"scripts": {
		"prettier:format": "prettier --write \"{,src/**/}*.{md,json,js,svelte,css,html,yml}\"",
		"lint": "eslint .",
		"lint:fix": "npm run lint --fix",
		"cleanup": "rimraf target/classes/static/",
		"start": "run-s \"tailwind:build\" \"sapper:watch\"",
		"sapper:watch": "sapper dev --src src/main/webapp/app --routes src/main/webapp/app/routes --static src/main/webapp/static --output src/main/webapp/app/node_modules/@sapper --build-dir target/webapp/output --port 9000 --open true",
		"build": "sapper export target/classes/static/ --entry '/ /404' --basepath / --src src/main/webapp/app --routes src/main/webapp/app/routes --static src/main/webapp/static --output src/main/webapp/app/node_modules/@sapper --build-dir target/webapp/output",
		"postbuild": "mv target/classes/static/404/index.html target/classes/static/404.html",
		"tailwind:build": "postcss src/main/webapp/app/tailwind.css -o src/main/webapp/static/vendor.css",
		"tailwind:watch": "npm run tailwind:build -- --w",
		"cy:open": "cypress open",
		"test": "jest src/main/webapp/",
		"test:watch": "npm run test -- --watch",
		"e2e": "cypress run",
		"webapp:build": "NODE_ENV=development run-s \"tailwind:build\" \"build\"",
		"webapp:prod": "NODE_ENV=production run-s \"tailwind:build\" \"build\"",
		"webapp:test": "npm run test"
	},
	"dependencies": {
		"compression": "1.7.4",
		"polka": "0.5.2",
		"sirv": "1.0.11"
	},
	"devDependencies": {
		"@babel/core": "7.13.15",
		"@babel/plugin-syntax-dynamic-import": "7.8.3",
		"@babel/plugin-transform-runtime": "7.13.15",
		"@babel/preset-env": "7.13.15",
		"@babel/runtime": "7.13.10",
		"@fortawesome/free-solid-svg-icons": "5.15.3",
		"@fullhuman/postcss-purgecss": "4.0.3",
		"@rollup/plugin-babel": "5.3.0",
		"@rollup/plugin-commonjs": "18.0.0",
		"@rollup/plugin-node-resolve": "11.2.1",
		"@rollup/plugin-replace": "2.4.2",
		"@rollup/plugin-url": "6.0.0",
		"@testing-library/jest-dom": "5.11.10",
		"@testing-library/svelte": "3.0.3",
		"autoprefixer": "10.2.5",
		"babel-jest": "26.6.3",
		"cssnano": "5.0.0",
		"cypress": "6.9.1",
		"eslint": "7.24.0",
		"eslint-plugin-cypress": "2.11.2",
		"eslint-plugin-jest-dom": "3.8.0",
		"eslint-plugin-svelte3": "3.1.2",
		"eslint-plugin-testing-library": "4.0.0",
		"fa-svelte": "3.1.0",
		"generator-jhipster-svelte": "0.3.0",
		"http-proxy-middleware": "1.1.1",
		"husky": "4.3.8",
		"jest": "26.6.3",
		"jest-junit": "12.0.0",
		"jest-sonar": "0.2.12",
		"jest-svelte-resolver": "1.0.0",
		"npm-run-all": "4.1.5",
		"postcss": "8.2.10",
		"postcss-cli": "8.3.1",
		"prettier": "2.2.1",
		"prettier-plugin-svelte": "2.2.0",
		"pretty-quick": "3.1.0",
		"rimraf": "3.0.2",
		"rollup": "2.45.2",
		"rollup-plugin-svelte": "7.1.0",
		"rollup-plugin-terser": "7.0.2",
		"sapper": "0.29.1",
		"svelte": "3.37.0",
		"svelte-jester": "1.4.0",
		"tailwindcss": "2.1.1"
	}
}
