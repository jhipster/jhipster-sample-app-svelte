{
	"name": "svelte-demo-application",
	"version": "0.1.0",
	"private": true,
	"description": "Description for SvelteDemoApplication",
	"license": "UNLICENSED",
	"type": "module",
	"scripts": {
		"build": "vite build",
		"cleanup": "rimraf target/classes/static/",
		"cy:open": "cypress open --e2e --browser chrome",
		"e2e": "npm run e2e:ci -- --headed",
		"e2e:ci": "cypress run --browser chrome",
		"format": "prettier --write \"{,src/**/,cypress/**/}*.{md,json,js,svelte,css,html,yml}\"",
		"lint": "eslint .",
		"lint:fix": "npm run lint --fix",
		"prepare": "husky install",
		"preview": "vite preview",
		"start": "vite dev --port 9000 --open true",
		"test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest src/main/webapp/",
		"test:watch": "npm run test -- --watch",
		"webapp:build": "npm run build",
		"webapp:prod": "npm run build",
		"webapp:test": "npm run test"
	},
	"config": {
		"backend_port": "8080",
		"default_environment": "prod",
		"packaging": "jar"
	},
	"dependencies": {
		"@fortawesome/free-solid-svg-icons": "6.2.0",
		"date-fns": "2.29.3"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "1.0.0-next.43",
		"@sveltejs/kit": "1.0.0-next.506",
		"@testing-library/jest-dom": "5.16.5",
		"@testing-library/svelte": "3.2.1",
		"autoprefixer": "10.4.12",
		"cross-env": "7.0.3",
		"cypress": "10.9.0",
		"esbuild": "0.15.10",
		"eslint": "8.24.0",
		"eslint-plugin-cypress": "2.12.1",
		"eslint-plugin-jest-dom": "4.0.2",
		"eslint-plugin-svelte3": "4.0.0",
		"eslint-plugin-testing-library": "5.7.0",
		"generator-jhipster-svelte": "0.10.2",
		"husky": "8.0.1",
		"jest": "29.1.2",
		"jest-environment-jsdom": "29.1.2",
		"jest-junit": "14.0.1",
		"jest-sonar": "0.2.12",
		"jest-svelte-resolver": "1.0.0",
		"jhipster-svelte-library": "0.9.2",
		"postcss": "8.4.17",
		"prettier": "2.7.1",
		"prettier-plugin-java": "1.6.2",
		"prettier-plugin-svelte": "2.7.1",
		"pretty-quick": "3.1.3",
		"rimraf": "3.0.2",
		"svelte": "3.50.1",
		"svelte-jester": "2.3.2",
		"tailwindcss": "3.1.8",
		"vite": "3.1.4"
	}
}
