{
	"name": "svelte-demo-application",
	"version": "0.1.0",
	"private": true,
	"description": "Description for SvelteDemoApplication",
	"license": "UNLICENSED",
	"type": "module",
	"scripts": {
		"build": "svelte-kit build",
		"cleanup": "rimraf target/classes/static/",
		"cy:open": "cypress open",
		"e2e": "npm run e2e:ci -- --headed",
		"e2e:ci": "cypress run --browser chrome",
		"format": "prettier --write \"{,src/**/,cypress/**/}*.{md,json,js,svelte,css,html,yml}\"",
		"lint": "eslint .",
		"lint:fix": "npm run lint --fix",
		"prepare": "husky install",
		"preview": "svelte-kit preview",
		"start": "svelte-kit dev --port 9000 --open true",
		"test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest src/main/webapp/",
		"test:watch": "npm run test -- --watch",
		"webapp:build": "npm run build",
		"webapp:prod": "npm run build",
		"webapp:test": "npm run test"
	},
	"config": {
		"backend_port": "8080",
		"default_environment": "prod",
		"packaging": "jar"
	},
	"dependencies": {
		"date-fns": "2.28.0",
		"swagger-ui-dist": "4.10.3"
	},
	"devDependencies": {
		"@fortawesome/free-solid-svg-icons": "6.1.1",
		"@sveltejs/adapter-static": "1.0.0-next.31",
		"@sveltejs/kit": "1.0.0-next.334",
		"@testing-library/jest-dom": "5.16.4",
		"@testing-library/svelte": "3.1.1",
		"autoprefixer": "10.4.7",
		"cross-env": "7.0.3",
		"cypress": "9.6.1",
		"esbuild": "0.14.39",
		"eslint": "8.15.0",
		"eslint-plugin-cypress": "2.12.1",
		"eslint-plugin-jest-dom": "4.0.1",
		"eslint-plugin-svelte3": "4.0.0",
		"eslint-plugin-testing-library": "5.5.0",
		"fa-svelte": "3.1.0",
		"generator-jhipster-svelte": "0.9.0",
		"husky": "7.0.4",
		"jest": "27.5.1",
		"jest-junit": "13.2.0",
		"jest-sonar": "0.2.12",
		"jest-svelte-resolver": "1.0.0",
		"jhipster-svelte-library": "0.3.5",
		"postcss": "8.4.13",
		"prettier": "2.6.2",
		"prettier-plugin-java": "1.6.1",
		"prettier-plugin-svelte": "2.7.0",
		"pretty-quick": "3.1.3",
		"rimraf": "3.0.2",
		"rollup-plugin-copy": "3.4.0",
		"svelte": "3.48.0",
		"svelte-jester": "2.3.2",
		"tailwindcss": "3.0.24"
	}
}
